<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/homeshell_setting_bg"
    android:baselineAligned="false"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <TextView android:id="@+id/theme"
        style="@style/menuTextStyle"
        android:text="@string/menu_item_themes"
        android:drawableTop="@drawable/ic_theme_normal"
        />

    <TextView android:id="@+id/wallpaper"
        style="@style/menuTextStyle"
        android:text="@string/menu_item_wallpapers"
        android:drawableTop="@drawable/ic_wallpaper_normal"
        />

    <TextView android:id="@+id/app_widget"
        style="@style/menuTextStyle"
        android:text="@string/menu_item_widget"
        android:drawableTop="@drawable/ic_widget_normal"
        />

    <TextView android:id="@+id/homeshellsetting"
        style="@style/menuTextStyle"
        android:text="@string/menu_item_homeshellsetting"
        android:drawableTop="@drawable/ic_launcher_normal"
        />

    <TextView android:id="@+id/setting"
        style="@style/menuTextStyle"
        android:text="@string/menu_item_settings"
        android:drawableTop="@drawable/ic_setting_normal"
        />

</LinearLayout>